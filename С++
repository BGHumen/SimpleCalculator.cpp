#include <iostream>//подключаем библиотеку "iostream"
using namespace std;//подключаем использование проcтранства имён std
int main() {//функция main - основная функция
	float a, b,res; char Do;//создаём переменные
	setlocale(LC_ALL, "rus");//подключение русского языка
	cout << "Добро пожаловать !\nВы используете консольный калькулятор написанный на C++" << endl; //коанда "cout" выводит в консоль текст и\или другие символы , а "cin" запрашивает ввод ! Дальше я не буду комментировать данные команды !
	cout << "Введите пример , состаящий из двух членов ниже :" << endl;
	cin >> a >> Do >> b;
	switch (Do) {//проверка действия для дальнейших вычеслений 
	case'+':
		res = a + b;//подсчёт результата
		break;//выход из проверки
	case'-':
		res = a - b;
		break;
	case'*':
		res = a * b;
		break;
	case'/':
		if (b == 0) {//проверка на деление на 0
			cout << "На нуль делить нельзя !" << endl;
		}// если всё хорошо - идём дальше
		else {
			res = a / b;
			break;
		}
	default://если не прошла ниодна проверка
		cout << "Удостоверьтесь , что вы ввели действие , которое может выполнить калькулятор : +,-,*,/" << endl;
	}
	cout << "Уравнение:" << a << Do << b << endl;//выводим уравнение 
	cout << "Результат уравнения:" << res << endl;//выводим результат
}
